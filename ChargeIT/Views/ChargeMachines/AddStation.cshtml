@model ChargeMachineViewModel

<div class="modal-content">
    <form method="POST">
        <div class="form-group">
            <label asp-for="City" class="form-label">City</label>
            <input type="text" class="form-control form-input" asp-for="City" required>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Street" class="form-label">Street</label>
            <input type="text" class="form-control form-input" asp-for="Street" required>
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Number" class="form-label">Number</label>
            <input type="number" class="form-control form-input" asp-for="Number" required>
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Latitude" class="form-label">Latitude</label>
            <input type="number" step="0.000001" class="form-control form-input" asp-for="Latitude" required>
            <span asp-validation-for="Latitude" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Longitude" class="form-label">Longitude</label>
            <input type="number" step="0.000001" class="form-control form-input" asp-for="Longitude" required>
            <span asp-validation-for="Longitude" class="text-danger"></span>
        </div>

        <button
            onclick="sendRequest('ChargeMachines', 'AddStation')"
            type="button"
            class="btn btn-success action-station-button">
            Save
        </button>
    </form>
</div>